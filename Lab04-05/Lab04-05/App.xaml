<Application x:Class="Lab04_05.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Lab04_05"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary x:Key="Language">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Languages/Russian.xaml" />
                <ResourceDictionary Source="/Resources/Languages/English.xaml" />
                <ResourceDictionary Source="/Resources/Style/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
