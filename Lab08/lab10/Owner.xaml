<Window x:Class="Lab08.Owner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab08"
        mc:Ignorable="d"
        Title="Owner" Height="400" Width="200" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip" WindowStyle="ThreeDBorderWindow" Background="#FFC4C0FF">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="ФИО:" HorizontalAlignment="Center"/>
            <TextBox x:Name="owner" Margin="25,0,25,25"/>
            <TextBlock Text="Дата рождения:" HorizontalAlignment="Center"/>
            <DatePicker x:Name="dateofbirth" Margin="25,0,25,25"/>
            <TextBlock Text="Номер паспорта:" HorizontalAlignment="Center"/>
            <TextBox x:Name="passport" Margin="25,0,25,25"/>
            <Button Click="Button_Click" Content="Загрузить фото" Margin="25,0,25,25" Height="20"/>
            <Image Margin="25,0,25,25" x:Name="imgDynamic" Height="100" Width="100"/>
            <Button Content="Сохранить" Click="Button_Click1" Margin="25,0,25,50" Height="20"/>
        </StackPanel>
    </Grid>
</Window>
